{{ template "header" .User }}
<style>
    form {
        margin-top: 40px;
        display: inline-block;
        max-width: 60%;
    }
</style>

<!--suppress ALL -->
<div class="container">
    <div class="section col-md-8 offset-md-2 text-center">
        <div class="section-content">
            <h2>{{.Question.Text}}</h2>
            <form action="/question" method="POST">
                {{range .Question.ChoiceAnswers}}
                    <div class="form-group form-check text-left">
                        <input
                            id="answer-{{.ID}}"
                            class="form-check-input"
                            type="checkbox"
                            name="answer[]"
                            value="{{.ID}}">
                        <label
                            for="answer-{{.ID}}"
                            class="form-check-label">
                            {{.Text}}
                        </label>
                    </div>
                {{else}}
                    <p>No answers.</p>
                {{end}}
                <button type="submit" class="btn btn-primary">Next ></button>
            </form>
            <ul>
            </ul>
        </div>
    </div>
</div>
{{ template "footer" }}