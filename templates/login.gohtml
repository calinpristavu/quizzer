<!doctype html>
<!--suppress HtmlUnknownTarget -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Quizzer login</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }
        .form-container {
            display: inline-flex;
            margin: auto;
            width: 60%;
        }
        .form-container .right,
        .form-container .left {
            width: 50%;
            padding: 15px;
        }
        .form-container .left {
            background-color: #fff;
        }
        .form-container .right {
            background-color: #00aeef;
        }
        .form-container .right h1 {
            color: #fff;
        }
        .form-signin {
            width: 100%;
            max-width: 330px;
            margin: 0 auto;
            display: inline-block;
            border-radius: 5px;
            padding: 20px;
        }

        .form-signin[action="/login"] button {
            background-color: #00aeef;
            color: #fff;
        }
        .form-signin[action="/complete-registration"] button {
            background-color: #fff;
        }
        .form-signin .form-control {
            position: relative;
            box-sizing: border-box;
            height: auto;
            padding: 10px;
            font-size: 16px;
        }
        .form-signin .form-control:focus {
            z-index: 2;
        }
        .form-signin input {
            margin-bottom: 2px;
            border-radius: 2px;
        }
        .form-signin button {
            margin-top: 10px;
        }
        @media screen and (max-width: 1200px) {
            .form-container {
                width: 80%;
            }
        }
        @media screen and (max-width: 768px) {
            .form-container {
                flex-direction: column;
                width: 85%;
            }

            .form-container .right,
            .form-container .left {
                width: 100%;
            }
        }
    </style>

</head>
<body class="text-center">
    <div class="form-container">
        <div class="left">
            <form action="/login" method="post" class="form-signin">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                <label for="username" class="sr-only">Username</label>
                <input
                        type="text"
                        name="username"
                        id="username"
                        class="form-control {{- if .Errors }} is-invalid{{end}}"
                        placeholder="Username"
                        {{if .PrevData.Username}}value="{{.PrevData.Username}}" {{end}}
                        required
                        autofocus>
                <label for="password" class="sr-only">Password</label>
                <input
                        type="password"
                        id="password"
                        name="password"
                        class="form-control {{- if .Errors }} is-invalid{{end}}"
                        placeholder="Password"
                        required>

                {{ range .Errors }}
                    <div class="alert alert-danger" role="alert">
                        {{.}}
                    </div>
                {{ end }}
                <button class="btn btn-lg btn-block" type="submit" name="login">Enter</button>
            </form>
        </div>

        <div class="right">
            <form action="/complete-registration" method="POST" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal">Complete registration</h1>
            <input
                    type="text"
                    name="username"
                    id="complete-username"
                    class="form-control"
                    placeholder="Username received from HR"
                    required
                    autofocus>
            <input
                    type="password"
                    id="complete-password"
                    name="password"
                    class="form-control"
                    placeholder="Password"
                    required>
            <input
                    type="password"
                    id="complete-repeated"
                    name="repeated"
                    class="form-control"
                    placeholder="Repeat password"
                    required>
            <button class="btn btn-lg btn-block" type="submit" name="login">Register</button>
        </form>
        </div>
    </div>
</body>
</html>
